<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding PageTitle}"
             x:Class="EE.Hillewaere.Views.StocklistEditProductView">
    <ContentPage.Content>
        <AbsoluteLayout>
            <ScrollView AbsoluteLayout.LayoutFlags="All"
                        AbsoluteLayout.LayoutBounds="0,0,1,1">
                <StackLayout>
                    <Label Text="Name" />
                    <Entry Text="{Binding Name}" Placeholder="Enter product name" />
                    <Label Text="Price" />
                    <Entry Text="{Binding Price}" Placeholder="Enter product price" />
                    <Label Text="Description" />
                    <Entry Text="{Binding Description}" Placeholder="Enter product description" />
                    <Button x:Name="btnSaveProduct" 
                            Command="{Binding SaveProductCommand}"
                            Text="Save product" />
                    <Button x:Name="btnDeleteProduct" 
                            Command="{Binding DeleteProductCommand}"
                            Text="Delete product" />
                </StackLayout>


            </ScrollView>


        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>