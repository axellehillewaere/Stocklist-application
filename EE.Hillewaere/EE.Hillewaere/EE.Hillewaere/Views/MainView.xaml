<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EE.Hillewaere.Views.MainView"
             Title="Stocklist">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Stocklist"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Place new order" Command="{Binding ViewPlaceNewOrder}" />
            <Button Text="Overview of stocklist" Command="{Binding ViewOverviewStocklist}" />
            <Button Text="Previous orders" Command="{Binding ViewPreviousOrders}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>